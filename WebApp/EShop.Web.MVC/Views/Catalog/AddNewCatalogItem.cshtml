@model AddCatalogVM

@{
    ViewBag.DisplayImage = "display-image";
    ViewBag.AddUpdateCatalogAction = "AddNewCatalogItem";
}
<div class="container">
    <div class="catalog-form-heading-block">
        <h2>Add New Item</h2>
    </div>   
    <div class="form-block">
        <div class="row">
            <div class="col-md-3">
                <img class="upladed-image" src="@ViewBag.Url" alt="uploaded temporary image" />
            </div>
        </div>

        <partial name="_AddUpdateCatalogItemsPartial" model="@Model" data="@ViewBag.DisplayImage"></partial>
    </div>
</div>

<link href="~/css/catalog_form.css" rel="stylesheet" />